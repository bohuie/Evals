<ul class="nav nav-tabs">
  <% if user_signed_in? %>
    <li role="presentation"> <%= link_to "Home", welcome_index_path %></li>

    <% if !current_user.client or current_user.admin %>
      <li role="presentation"> <%= link_to "Create New Peer Eval", peer_evals_new_path %></li>
      <li role="presentation"> <%= link_to "My Peer Evals", peer_evals_path %></li>
      <li role="presentation"> <%= link_to "Create New Group Eval", group_evals_new_path %></li>
      <li role="presentation"> <%= link_to "My Group Evals", group_evals_path %></li>
    <% end %>

    <% if current_user.client or current_user.admin %>
      <li role="presentation"> <%= link_to "Create Client Feedback", feedbacks_new_path %></li>
    <% end %>
    <% if user_signed_in? && current_user.admin %>
      <li role="presentation"> <%= link_to "All Client Feedback", feedbacks_path %></li>
    <% else %>
      <li role="presentation"> <%= link_to "My Client Feedback", feedbacks_path %></li>
    <% end %>

    <% if current_user.admin %>
      <li role="presentation"> <%= link_to " Student Reports", reports_path %></li>
    <% end %>

    <li role="presentation" class="pull-right">
        Signed in as <%= current_user.email %>.
        <%= link_to "Sign out", destroy_user_session_path %>
    </li>
  <% end %>
