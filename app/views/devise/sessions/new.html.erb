

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "w-100 form-horizontal"}) do |f| %>

  <div class="form-group row">
    <h2 class="w-100 text-center">Login</h2>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10 mt-auto mb-auto">
      <%= f.email_field :email, autofocus: true, class: "w-100 form-control", required: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label text-right" %>
    <div class="col-sm-10 mt-auto mb-auto">
      <%= f.password_field :password, autocomplete: "off", class: "w-100 form-control", required: true %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group row">
      <%= f.label :remember_me, class: "col-sm-2 col-form-label text-right" %>
      <div class="col-sm-10 mt-auto mb-auto">
        <%= f.check_box :remember_me %>
      </div>
    </div>
  <% end -%>

  <div class="w-100">
    <%= f.submit "Log in", class: "w-100 form-control" %>
  </div>
<% end %>

<div class="w-100 text-center">
  <%= render "devise/shared/links" %>
</div>